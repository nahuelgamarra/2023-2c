@using Clase2.IntroMVC.Entidades;
@model List<Serie>
@{
}

<h1>Listado de Series</h1>
<table>
    <tr>
        <th>Id</th>
        <th>Titulo</th>
        <th>Genero</th>
        <th>Temporadas</th>
        <th>Plataformas</th>
        <th>Eliminar</th>
        <th>Actualizar</th>
    </tr>

    @foreach (Serie serie in Model)
    {
        <tr>
            <td>@serie.Id</td>
            <td>@serie.Titulo</td>
            <td>@serie.Genero</td>
            <td>@((serie.Temporadas ?? new List<Temporada>()).Count())</td>
            <td>@Html.Partial("_PlataformaPartial", serie)</td>
            <td>
                <a class="nav-link text-dark"
                   asp-area=""
                   asp-controller="Series"
                   asp-action="Eliminar"
                   asp-route-id="@serie.Id">Eliminar</a>
            </td>
            <td>
                <a class="nav-link text-dark"
                   asp-area=""
                   asp-controller="Series"
                   asp-action="Actualizar"
                   asp-route-id="@serie.Id">Actualizar</a>
            </td>
        </tr>
    }
</table>
