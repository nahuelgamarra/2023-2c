@{
  
}
<h1>Actualizar Pelicula </h1>
<form action="/Pelicula/Actualizar" method="post" enctype="multipart/form-data">

    <div class="form-group">
        <label for="nombre">Titulo</label>
        <input type="text" id="Titulo" name="Titulo" class="form-control" value="@Model.Titulo" />
    </div>
    <div class="form-group">
        <label for="nombre">Genero</label>
        <input type="text" id="Genero" name="Genero" class="form-control" value="@Model.Genero" />
    </div>
    <div class="form-group">
        <label for="nombre">Fecha de estreno</label>
        <input type="date" id="FechaEstreno" name="FechaEstreno" class="form-control" value="@(Model.FechaEstreno?.ToString("yyyy-MM-dd") ?? "")" />
    </div>
    <div class="form-group">
        <label for="nombre">Presupuesto</label>
        <input type="number" id="Presupuesto" name="Presupuesto" class="form-control" value="@Model.Presupuesto" />
    </div>
    <div class="form-group">
        <label for="nombre">Recaudacion</label>
        <input type="number" id="Recaudacion" name="Recaudacion" class="form-control" value="@Model.Recaudacion" />
    </div>
    <div class="form-group">
        <label for="nombre">Nomida al Oscar</label>
        <input type="checkbox" id="NominadaAlOscar" name="NominadaAlOscar"  />
    </div>
    <div class="form-group">
        <label for="nombre">Imagen</label>
        <input type="file" id="Imagen" name="Imagen" class="form-control" />
    </div>

    <input type="submit" value="Actualizar" class="btn btn-primary  form-control" />
</form>

